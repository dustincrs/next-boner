<%= bootstrap_form_for :session, url: session_path do |form| %>
  <div class="text-field">
    <%= form.text_field :email, type: 'email' %>
  </div>

  <div class="password-field">
    <%= form.password_field :password %>
  </div>

  <div class="row">
    <div class="submit-field col w-100 mb-2">
      <%= form.submit "Sign In!", class: 'btn btn-success w-100' %>
    </div>
  </div>

  <div class="other-links">
      <% if Clearance.configuration.allow_sign_up? %>
        <%= link_to t(".sign_up"), sign_up_path, class: 'btn btn-primary w-100 mb-2' %>
      <% end %>
        <%= link_to t(".forgot_password"), new_password_path, class: 'btn btn-danger w-100' %>
  </div>

<% end %>