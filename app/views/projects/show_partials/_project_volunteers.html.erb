<!--If signed in as owner or mod or admin-->
<% if signed_in? %>
	<% if current_user.can_view_project_detail?(@project) %>
		<div class="row">
			<div class="col">
				<h3 class="text-center">Volunteers (<span id="total-volunteers-count"><%=@approved.size + @pending.size%></span>)</h3>
			</div>
		</div>

		<% if @project.responses.size != 0 %>
			<div class="row">
				<div class="col" id="approved-volunteers">
					<h5><u>Approved Volunteers (<span id="approved-volunteers-count"><%=@approved.size%></span>)</u></h5>
					<%=render partial: 'users/volunteer', collection: @approved, as: :response%>
				</div>
			</div>
			
			<div class="row">
				<div class="col" id="pending-volunteers">
					<h5><u>Pending Approval (<span id="pending-volunteers-count"><%=@pending.size%></span>)</u></h5>
					<%=render partial: 'users/volunteer', collection: @pending, as: :response%>
				</div>
			</div>
		<% end %>
		<hr />
	<% end %>
<% end %>