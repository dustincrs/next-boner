<%= bootstrap_form_with scope: :project , url:projects_path, local: true do |form| %>
  <div class="row">
    <div class = "col">
      <%= form.text_field :title ,label_class: "listingtext" %>
    </div>
  </div>

  <div class="row">
    <div class = "col">
      <%= form.select :category, Project::CATEGORIES, {}, label_class: "listingtext" %>
    </div>
  </div>

  <div class="row">
    <div class = "col-6">
      <%= form.text_field :estimated_time,label_class: "listingtext" %>
    </div>
    <div class = "col-6">
      <%= form.text_field :max_people,label_class: "listingtext" %>
    </div>
  </div>

  <div class="row">
    <div class = "col">
      <%= form.text_field :location,label_class: "listingtext" %>
    </div>
  </div>

  <div class="row">
    <div class = "col">
      <%= form.file_field :images, multiple: true, class:"listingtext" %><br>
    </div>
  </div>

  <div class="row">
    <div class="col"></div>

    <div class="col">
      <%= link_to "Back to my Profile", user_path(current_user.id), class: "btn btn-secondary" %>
    </div>
    <div class="col">
      <%= form.submit "Submit Project", class: "btn btn-primary" %>
    </div>

    <div class="col"></div>
  </div>

<% end %>