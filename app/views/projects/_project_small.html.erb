<a href="<%=project_path(project.id)%>" style="color: black">
	<li class="list-group-item border">
		<div class="row">
			<div data-toggle="tooltip" title="<%=project.category%>" class="col-1">
				<%=project.category_icon%>
			</div>
			<div class="col">
				<%=project.title.truncate(25)%>
			</div>
			<div data-toggle="tooltip" title="<%=project.max_people%> people needed" class="col-2">
				<%=project.display_capacity%>
			</div>
			<div data-toggle="tooltip" title="<%=project.estimated_time%> minutes" class="col-2 text-right">
				<%=project.display_estimated_time%>
			</div>
		</div>
	</li>
</a>