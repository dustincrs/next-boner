<div class="row mb-2">
	<div class="col"><%= link_to response.user.full_name, user_path(response.user.id)%></div>

	<% if(response.is_approved == false) %>
		<div class="col-1">
			<%= link_to "<i class=\"fas fa-check\" style=\"color: green\"></i>".html_safe, response_path(response.id), method: :put %>
		</div>
	<% end %>

	<% if(response.project.is_complete == true) %>
		<% if (Review.find_by(user_id: response.user.id, project_id: response.project.id).nil?) %>
			<div class="col-1">
			<!-- 	<#%= link_to "<i class=\"fas fa-pen-fancy\" style=\"color: yellow\"></i>".html_safe, new_review_path(response.project.id, response.user.id), method: :get %> -->
				<%= link_to "<i class=\"fas fa-pen-fancy\" style=\"color: yellow\"></i>".html_safe , "#" , "data-target":"#ratingmodal" , "data-toggle":"modal" %>
			</div>			
		<%end%>
	<% else %>
		<div class="col-1">
			<%= link_to "<i class=\"fas fa-times\" style=\"color: red\"></i>".html_safe, response_path(response.id), method: :patch %>
		</div>
	<% end %>

	<div class="col-1">
		<%= link_to "<i class=\"fas fa-comment-alt\" style=\"color: blue\"></i>".html_safe%>
	</div>

</div>


<!-- Modal -->
<div class="modal fade" id="ratingmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Rate Volunteer</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<%= render :partial => 'reviews/form' %>      
	</div>
  
    </div>
  </div>
</div>
