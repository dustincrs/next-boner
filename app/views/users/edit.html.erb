<div class="jumbotron pt-3">
  <div id="clearance" class="sign-up">
    <h3 class="text-center"><u>Edit Account</u></h3>
      <%= bootstrap_form_for @user do |form| %>
        <%= render partial: '/users/form', object: form %>

		<div class="submit-field">
		  <%= form.submit "Update!", class: 'btn btn-primary w-100' %>
		</div>

		<div class="other-links mt-1">
		  <%= link_to "Back", user_path(@user), class: 'btn btn-secondary w-100' %>
		</div>        
      <% end %>
  </div>
</div>
