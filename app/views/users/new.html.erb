<div id="clearance" class="sign-up">
<h3 class="text-center mb-3"><u>New Account</u></h3>
  <%= bootstrap_form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>
    
	<div class="row">
		<div class="password-field col">
		    <%= form.password_field :password, placeholder:"Password", hide_label: true %>
		</div>
	</div>

	<div class="submit-field">
	  <%= form.submit "Sign Up!", class: 'btn btn-primary w-100' %>
	</div>

	<div class="other-links mt-1">
	  <%= link_to t(".sign_in"), sign_in_path, class: 'btn btn-secondary w-100' %>
	</div>
	
  <% end %>
</div>