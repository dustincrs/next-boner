<!-- # <h2>New review for <#%="#{@user.full_name} regarding #{@project.title}"%></h2> -->
<%= form_with scope: :review, url: reviews_path do |form| %>
  <%= form.hidden_field :project_id, value: @project.id%>
  <%= form.hidden_field :user_id, value: user_id%>
  <div>
    <%= form.label :rating%>
  </div>
  <div id='star-<%=user_id%>' class = 'ml-1'></div>
  <!-- <#%= form.range_field :rating, :min=>0, :max=>5%> <br /> -->
  <%= form.text_area :text, rows: 8, cols: 45, placeholder: "Write some comments (Optional)" ,class:"ml-1"%> <br />
  <%= link_to "Back to Project", project_path(@project.id), class: "btn btn-secondary"%>
  <%= form.submit "Submit Review!", class: "btn btn-success"%>
  <script>
    $('#star-<%=user_id%>').raty({
        path: '/assets',
        scoreName: 'review[rating]',
    });
  </script>
<% end %>