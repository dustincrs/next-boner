<div class="col-12 my-2">
	<div class="card" style="width: 100%; height: 100%">
		<div class="card-header">
			<b><%=review.star_rating%> for <%= link_to review.project.title, project_path(review.project.id)%>, from <%=link_to review.project.user.full_name, user_path(review.project.user.id)%></b>
		</div>

		<div class="card-body">
			<div class="card-text">
				<%=review.text%>
			</div>
		</div>
	</div>    	
</div>
