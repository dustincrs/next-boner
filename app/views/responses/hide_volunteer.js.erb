function return_count(id)	{
	return parseInt($("#" + id).html())
}

// Find the desired volunteer
volunteer = $("#response_<%=@response.id%>")

// Hide the desired volunteer
volunteer.hide()

// Get the id of the parent (to find out whether volunteer is pending or approved)
parent = volunteer.parent().attr('id')

if (parent=="approved-volunteers")	{
	x = return_count("approved-volunteers-count")
	$("#approved-volunteers-count").html(x - 1)

}	else if (parent=="pending-volunteers")	{
	x = return_count("pending-volunteers-count")
	$("#pending-volunteers-count").html(x - 1)
	
}

// Gets current value of the total volunteer count, then replaces it (decrement by 1)
x = return_count("total-volunteers-count")
$("#total-volunteers-count").html(x-1)